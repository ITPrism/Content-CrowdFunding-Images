<?xml version="1.0" encoding="utf-8"?>
<extension version="3.2" type="plugin" group="content" method="upgrade">
    <name>PLG_CONTENT_CROWDFUNDINGIMAGES</name>
    <author>Todor Iliev</author>
    <copyright>Copyright (C) 2015 Todor Iliev ( ITPrism.com ). All rights reserved.</copyright>
    <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
    <authorEmail>todor@itprism.com</authorEmail>
    <authorUrl>http://itprism.com</authorUrl>
    <version>1.6</version>
    <creationDate>20 February, 2014</creationDate>
    <description><![CDATA[
    <p>CrowdFunding - Images is a plugin that displays the additional images of the project on the details page.</p>
    <p><a href="http://itprism.com/" target="_blank">Subscribe for the newsletter</a> to receive information about updates and new ITPrism extensions.</p>
    <p>Please, <a href="http://extensions.joomla.org/extensions/extension/e-commerce/donations/crowdfunding" target="_blank">vote for the extension</a> on Joomla! Extensions Directory</p>
    ]]></description>
    
    <help url="PLG_CONTENT_CROWDFUNDINGIMAGES_HELP_URL"/>
    
    <files>
        <filename plugin="crowdfundingimages">crowdfundingimages.php</filename>

		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
        <folder>language</folder>
    </files>
    
    <config>
		<fields name="params">
			<fieldset name="basic">
                <field name="gallery" type="list" default="fancybox" label="PLG_CONTENT_CROWDFUNDINGIMAGES_GALLERY" description="PLG_CONTENT_CROWDFUNDINGIMAGES_GALLERY_DESC" class="btn-group">
                   <option value="fancybox">FancyBox</option>
                   <option value="magnific">Magnific</option>
                </field>
                
                <field name="display_title" type="radio" default="0" label="PLG_CONTENT_CROWDFUNDINGIMAGES_DISPLAY_TITLE" description="PLG_CONTENT_CROWDFUNDINGIMAGES_DISPLAY_TITLE_DESC" class="btn-group">
                   <option value="0">JNO</option>
                   <option value="1">JYES</option>
                </field>
			</fieldset>
            
            <fieldset name="advanced">
                <field name="include_jquery" type="radio" default="0" label="PLG_CONTENT_CROWDFUNDINGIMAGES_INCLUDE_JQUERY" description="PLG_CONTENT_CROWDFUNDINGIMAGES_INCLUDE_JQUERY_DESC" class="btn-group">
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
            
        </fields>
	</config>
</extension>
